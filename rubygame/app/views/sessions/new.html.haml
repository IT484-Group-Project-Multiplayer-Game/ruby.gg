%div{:class => "mdl-grid content-center"}
  %div{:class => "group"}
    %a{:class => "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored"} I have an account
    = link_to "I am a new user", new_user_path, :class => "mdl-button mdl-js-button mdl-js-ripple-effect"

- provide(:title, "Log in")
%h1 Log in
.row
  .col-md-6.col-md-offset-3
    = form_for(:session, url: login_path) do |f|
      = f.label :email
      = f.email_field :email, class: 'form-control'
      = f.label :password
      = f.password_field :password, class: 'form-control'
      = f.submit "Log in", class: "btn btn-primary"
    %p
      New user? #{link_to "Sign up now!", users_new_path}


%div{:class => "google_button"}
  - if current_user
    Signed in as
    = succeed "!" do
      %strong= current_user.name
    = link_to "Sign out", signout_path, id: "sign_out"
  - else
    = link_to image_tag('google_image.png'), "/auth/google_oauth2", id: "sign_in"