%div{:class => "mdl-grid content-center"}
  %div{:class => "group"}
    = link_to "I have an account",auth_index_path, :class => "mdl-button mdl-js-button mdl-js-ripple-effect"
    %a{:class => "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored"} I am a new user

  = form_for @user do |f|
    - if @user.errors.any?
      .error_messages
        %h2 Form is invalid
        %ul
          - for message in @user.errors.full_messages
            %li= message

    %div{:class => "mdl-textfield mdl-js-textfield"}
      = f.label :email, :class => "mdl-textfield__label"
      = f.text_field :email, :class => "mdl-textfield__input"

    %div{:class => "mdl-textfield mdl-js-textfield"}
      = f.label :password, :class => "mdl-textfield__label"
      = f.password_field :password, :class => "mdl-textfield__input"

    %div{:class => "mdl-textfield mdl-js-textfield"}
      = f.label :password_confirmation, :class => "mdl-textfield__label"
      = f.password_field :password_confirmation, :class => "mdl-textfield__input"

    %input{:class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", :type => "submit", :value => "Create account"}

%br
%br
%div{:class => "google_button"}
  - if current_user
    Signed in as
    = succeed "!" do
      %strong= current_user.name
    = link_to "Sign out", signout_path, id: "sign_out"
  - else
    = link_to image_tag('google_image.png'), "/auth/google_oauth2", id: "sign_in"